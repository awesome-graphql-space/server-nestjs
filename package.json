{
  "name": "graphql-boilerplate-server",
  "version": "0.0.1",
  "description": "graphql boilerplate server",
  "contributors": [
    {
      "name": "Rex Raphael",
      "url": "https://github.com/johanjordaan"
    },
    {
      "name": "Manjula Dube",
      "url": "https://github.com/juicycleff"
    }
  ],
  "keywords": [
    "nestjs",
    "react",
    "reactjs",
    "prisma",
    "prisma-graphql",
    "apollo-server",
    "prisma-graphql",
    "apollo-server-2",
    "graphql"
  ],
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "prisma": "prisma",
    "build": "rm -rf dist && graphql codegen && tsc",
    "resolver-interfaces": "graphql-resolver-codegen interfaces -s src/schema.graphql -o ./src/generated/resolvers.ts",
    "resolver-scaffold": "graphql-resolver-codegen scaffold -s src/schema.graphql -o ./src/resolvers/ -i ../generated/resolvers",
    "resolver-codegen": "npm-run-all resolver-interfaces resolver-scaffold"
  },
  "dependencies": {
    "@nestjs/common": "5.7.4",
    "@nestjs/core": "5.7.4",
    "@nestjs/graphql": "5.5.7",
    "graphql-type-json": "0.2.1",
    "apollo-errors": "1.9.0",
    "apollo-server": "^2.0.0",
    "apollo-server-express": "2.25.1",
    "bcryptjs": "2.4.3",
    "dotenv": "6.0.0",
    "fastify-formbody": "2.0.1",
    "graphql": "0.13.2",
    "graphql-import": "0.6.0",
    "graphql-subscriptions": "0.5.8",
    "graphql-tools": "3.1.1",
    "jsonwebtoken": "8.3.0",
    "lodash": "^4.17.10",
    "prisma-binding": "2.3.16",
    "prisma-lib": "0.1.44",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.2.2",
    "typescript": "2.9.2"
  },
  "devDependencies": {
    "@nestjs/testing": "5.1.0",
    "@types/express": "4.16.0",
    "@types/jest": "21.1.10",
    "@types/node": "9.6.26",
    "@types/supertest": "2.0.5",
    "graphql-cli": "2.17.0",
    "graphql-resolver-codegen": "0.1.9",
    "jest": "21.2.1",
    "nodemon": "1.18.3",
    "npm-run-all": "4.1.5",
    "prettier": "1.14.0",
    "prisma": "1.34.12",
    "supertest": "3.1.0",
    "ts-jest": "21.2.4",
    "ts-loader": "4.4.2",
    "ts-node": "4.1.0",
    "tsconfig-paths": "3.5.0",
    "tslint": "5.3.2",
    "webpack": "4.16.5",
    "webpack-cli": "2.1.5",
    "webpack-node-externals": "1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
